<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp">

    <!-- User 1 Section -->
    <LinearLayout
        android:id="@+id/user1_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="2dp"
        android:background="@drawable/widget_background_user1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- User 1 Name -->
        <TextView
            android:id="@+id/user1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User 1"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- User 1 Update Image -->
        <ImageView
            android:id="@+id/user1_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_placeholder"
            android:contentDescription="User 1 Update" />

        <!-- User 1 Text (optional) -->
        <TextView
            android:id="@+id/user1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- User 2 Section -->
    <LinearLayout
        android:id="@+id/user2_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="2dp"
        android:background="@drawable/widget_background_user2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- User 2 Name -->
        <TextView
            android:id="@+id/user2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User 2"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- User 2 Update Image -->
        <ImageView
            android:id="@+id/user2_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_placeholder"
            android:contentDescription="User 2 Update" />

        <!-- User 2 Text (optional) -->
        <TextView
            android:id="@+id/user2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>
